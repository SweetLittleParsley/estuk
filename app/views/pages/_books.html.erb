<table class="table table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Availability</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      	<% @books.each do |book| %>
        <tr>
          <td><%= book.id %></th>
          <th scope="row"><%= link_to book.name, book_path(book.id) %></td>
          <td><%= book.availability %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        </tr>
		<% end %>
      </tbody>
  </table>